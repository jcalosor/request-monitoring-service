{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "baseUrl": "src",
  "paths": {
    "@interfaces/*": ["interfaces/*"],
    "@connections/*": ["connections/*"]
  },
  "exclude": ["node_modules"]
}