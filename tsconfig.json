{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "@interfaces/*": ["interfaces/*"],
      "@connections/*": ["connections/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "tests/**/*spec.ts"
  ],
  "exclude": ["node_modules", "dist"]
}